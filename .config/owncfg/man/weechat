# Server {{{
/set weechat.network.gnutls_ca_file "/etc/ssl/certs/ca-certificates.crt"
/server add fn "chat.freenode.net/7000"
/set irc.server.fn.nicks "ldvx,|dvx"
/set irc.server.fn.username "user"
/set irc.server.fn.ssl "on"
/set irc.server.fn.ssl_dhkey_size "1024"

/server add znc.fn 192.168.0.5/1122
/set irc.server.znc.fn.nicks "ldvx,|dvx"
/set irc.server.znc.fn.username "fn"
/set irc.server.znc.fn.ssl "on"
/set irc.server.znc.fn.ssl_cert "znc.pem"
/set irc.server.znc.fn.ssl_verify "off"

/server add znc.msn 192.168.0.5/1122
/set irc.server.znc.msn.nicks "IPoAC,IPoAC_"
/set irc.server.znc.msn.username "msn"
/set irc.server.znc.msn.ssl "on"
/set irc.server.znc.msn.ssl_cert "znc.pem"
/set irc.server.znc.msn.ssl_verify "off"
# }}}
