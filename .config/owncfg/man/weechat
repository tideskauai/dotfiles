# cd ~/.weechat/python/autoload/ && wget http://www.weechat.org/files/scripts/weeget.py
/weeget install colorize_lines
/weeget install colorize_nicks 
/weeget install beep
/weeget install text_replace.py
/weeget install toggle_nicklist.py
/weeget install go.py
/set plugins.var.python.toggle_nicklist.action "show"
# while on the channel -> /toggle_nicklist add
/set plugins.var.python.colorize_nicks.min_nick_length 4
/set plugins.var.python.colorize_nicks.ignore_tags "irc_join,irc_quit,irc_part,irc_smart_filter"
