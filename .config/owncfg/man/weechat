# Behavior {{{
/set weechat.plugin.autoload "*,!logger,!tcl,!lua,!ruby,!xfer,!relay,!fifo"
/set irc.network.lag_min_show 1000
/set weechat.look.day_change on
/set weechat.look.jump_current_to_previous_buffer off
/set weechat.completion.partial_completion_command_arg on
/filter add join_quit * irc_quit,irc_join,irc_part *
/filter add irc_clean * irc_470,irc_324,irc_328,irc_329,irc_332,irc_333,irc_372,irc_376 *
/filter add bitlbee irc.znc.msn.&bitlbee irc_mode *
/filter add noise * nick_phrik,nick_nathan28,nick_masterkorp,nick_rabbitear,nick_Nuked *
/set aspell.check.default_dict "en,es" 
/set weechat.look.paste_bracketed on
/set weechat.look.paste_max_lines 0
/key unbind meta-m
/key unbind meta-=
/key unbind ctrl-J
/key unbind ctrl-N
/key unbind ctrl-P
/unalias AAWAY
/unalias AME
/unalias AMSG
/unalias ANICK
/unalias CHAT
/unalias KB
/unalias MUB
/unalias UB
/unalias BYE
/unalias EXIT
/unalias LEAVE
/unalias SAY
/unalias SIGNOFF
/unalias UMODE
/unalias W
/unalias K
/unalias WI
/unalias WII
/unalias WW
/unalias C
/unalias IG
/unalias M
/unalias N
/unalias T
/alias su /window scroll_unread
/set irc.ctcp.version = ""
#/set irc.look.buffer_switch_autojoin off
/set irc.look.display_old_topic off
# }}}

