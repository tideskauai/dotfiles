/set plugins.var.python.text_replace.replacement_words "lol=laughing out loud,brb=be right back,ty=thank you,wtf=what the freckles,alo=actual laughter occurred,iirc=if I remember correctly,<-=←,->=→"
/set plugins.var.perl.colorize_lines.own_lines on
