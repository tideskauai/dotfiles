#!/bin/bash

if (($# == 0)); then
	echo "Usage: roll <foo.tar.gz> ./foo ./bar"
else
	FILE=$1
	case $FILE in
		*.tar.bz2) shift && tar cjf $FILE $* ;;
		*.tar.gz) shift && tar czf $FILE $* ;;
		*.tar.xz) shift && tar cJf $FILE $* ;;
		*.tar.zx) shift && tar cJf $FILE $* ;;
		*.tgz) shift && tar czf $FILE $* ;;
		*.zip) shift && zip $FILE $* ;;
		*.rar) shift && rar $FILE $* ;;
	esac
fi
