Config { font = "-*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*"
        , bgColor = "#161616"
        , fgColor = "#4d4d4d"
        , border = NoBorder
        , borderColor = "#000000"
        , position = Top
        , lowerOnStart = True
        , hideOnStart = False
        , persistent = True
        , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","#429942","--high","#A36666"] 50
                        , Run MultiCpu ["-t","Cpu: <autototal>","-L","10","-H","50","--normal","#429942","--high","#A36666"] 10
                        , Run Memory ["-t", "Mem:<usedratio>%"] 10
                        , Run Date "%a %_d %b  @ %H:%M" "date" 10
                        , Run Com "sh" ["~/dev/xmobar/temperature"] "temperature" 10
                        , Run Com "sh" ["~/dev/xmobar/netstats"] "netstat" 10
                        , Run Com "sh" ["~/dev/xmobar/todo"] "todo" 500
                        , Run StdinReader
                        ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{[ %todo% ][ %temperature% <fc=#7965ac>-</fc> %netstat% <fc=#7965ac>-</fc> %eth0% <fc=#7965ac>-</fc> %multicpu% <fc=#7965ac>-</fc> %memory% <fc=#7965ac>-</fc> %date% ]"
       }
