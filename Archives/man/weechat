# Server {{{
/set weechat.network.gnutls_ca_file "/etc/ssl/certs/ca-certificates.crt"

/server add fn chat.freenode.net/7000
/set irc.server.fn.nicks "ldvx,|dvx"
/set irc.server.fn.username "user"
/set irc.server.fn.ssl "on"
/set irc.server.fn.ssl_dhkey_size "1024"
/set irc.server.fn.autojoin "#archlinux,#archlinux-offtopic,#weechat"

/server add jb irc.geekshed.net
/set irc.server.jb.autojoin "#jupiterbroadcasting"

/server add im 127.0.0.1
/set irc.server.im.nicks "IPoAC,IPoAC_"
/set irc.server.im.username "IM"

/server add znc.fn 192.168.0.5/1122
/set irc.server.znc.fn.nicks "ldvx,|dvx"
/set irc.server.znc.fn.username "fn"
/set irc.server.znc.fn.ssl "on"
/set irc.server.znc.fn.ssl_cert "znc.pem"
/set irc.server.znc.fn.ssl_verify "off"

/server add znc.im 192.168.0.5/1122
/set irc.server.znc.im.nicks "IPoAC,IPoAC_"
/set irc.server.znc.im.username "IM"
/set irc.server.znc.im.ssl "on"
/set irc.server.znc.im.ssl_cert "znc.pem"
/set irc.server.znc.im.ssl_verify "off"
# }}}
