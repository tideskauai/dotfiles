# Behavior {{{
/set weechat.plugin.autoload "*,!logger,!tcl,!lua,!ruby,!xfer,!relay,!fifo"
/set irc.network.lag_min_show 1000
/set weechat.look.day_change off
/set weechat.look.jump_current_to_previous_buffer off
/set weechat.completion.partial_completion_command_arg on
/filter add join_quit *,!irc.znc.im.*,!irc.im.* irc_quit,irc_join,irc_part *
/filter add names *,!irc.znc.im.*,!irc.im.* irc_366 *
/filter add irc_clean * irc_470,irc_324,irc_328,irc_329,irc_333,irc_372,irc_376 *
/filter add bitlbee irc.znc.im.&bitlbee,irc.im.&bitlbee irc_mode *
/filter add noise * nick_phrik,nick_nathan28,nick_masterkorp,nick_rabbitear,nick_Nuked,nick_Aut0Exec,nick_CryptoNaut *
/set aspell.check.default_dict "en,es" 
/aspell enable
/set weechat.look.paste_bracketed on
/set weechat.look.paste_max_lines 0
/key unbind meta-m
/key unbind meta-=
/key unbind ctrl-J
/key unbind ctrl-N
/key unbind ctrl-P
/key unbind meta2-15~
/key unbind meta2-17~
/key bind meta-c /close
/alias wr /layout apply windows
/alias im /query -server im
/set irc.ctcp.version = ""
/set irc.look.buffer_switch_autojoin off
/set irc.look.display_old_topic off
/set weechat.look.buffer_notify_default highlight
/set weechat.look.save_config_on_exit off
/set weechat.look.color_nick_offline on
/set weechat.look.window_separator_vertical off
/set weechat.look.window_separator_horizontal off
/set weechat.bar.input.size 0
/set weechat.bar.input.size_max 2
# }}}

